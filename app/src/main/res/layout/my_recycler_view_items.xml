    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="273dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintStart_toEndOf="@+id/shapeAbleImageView"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/first_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ola_machiavielli"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/card_second_text"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/_20_10_202"
                app:layout_constraintStart_toEndOf="@+id/card_second_image"
                app:layout_constraintTop_toBottomOf="@+id/card_first_text" />

            <TextView
                android:id="@+id/card_first_text"
                android:layout_width="71dp"
                android:layout_height="17dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/_20_10_202"
                app:layout_constraintStart_toEndOf="@+id/first_card_image"
                app:layout_constraintTop_toBottomOf="@+id/first_card_text" />

            <ImageView
                android:id="@+id/viewLine"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="64dp"
                android:src="@drawable/ic_straight_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_card_text" />

            <ImageView
                android:id="@+id/first_card_image"
                android:layout_width="27dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_baseline_cake_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_first_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_card_text"
                app:layout_constraintVertical_bias="0.232" />

            <ImageView
                android:id="@+id/card_second_image"
                android:layout_width="27dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_second_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_card_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>